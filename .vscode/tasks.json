    "version": "2.0.0",
    "tasks": [
        {
            "label": "ZDS build ez80asm",
            "type": "shell",
            "command": "C:\\ZiLOG\\ZDSII_eZ80Acclaim!_5.3.5\\bin\\make.exe rebuildall -f ../ez80asm.mak",
            "options": {
                "cwd": "${workspaceFolder}/src/Debug"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ZDS build loader command",
            "type": "shell",
            "command": "make -f ${workspaceFolder}/src/moscmd/Release/ez80asm_Release.mak",
            "options": {
                "cwd": "${workspaceFolder}/src/moscmd/Release"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Compile and release agon",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["ZDS build loader command", "ZDS build ez80asm", "Package agon binaries"]
        },
        {
            "label": "Package agon binaries",
            "type": "shell",
            "command": "./.vscode/agon_package.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
    ]
}